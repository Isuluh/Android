<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:divider="@drawable/divider"
    android:showDividers="middle"
    android:orientation="vertical"
    tools:context=".SecondaryActivity">

    <Button
        android:id="@+id/sbutton_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectCheese"
        android:text="Cheese" />

    <Button
        android:id="@+id/sbutton_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectRice"
        android:text="Rice" />

    <Button
        android:id="@+id/sbutton_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectApple"
        android:text="Apple" />

    <Button
        android:id="@+id/sbutton_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectBread"
        android:text="Bread" />

</LinearLayout>